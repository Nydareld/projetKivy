<Game>:
    canvas:
        Color:
            rgba: 0.1,0.1,0.1,1


<Bloc>:
    y: self.position*self.game.offset+self.game.startx
    x: self.positionLaterale

    canvas.before:
        PushMatrix
        Rotate:
            axis: 0,0,1
            angle: root.angle
            origin: root.pos[0]+root.size[0]/2,root.pos[1]+root.size[1]/2
    canvas.after:
        PopMatrix

    canvas:
        Color:
            rgba: root.rgba
        Rectangle:
            pos: (self.pos[0],self.pos[1])
            size: self.size
