<PlayerMenu>:
    canvas.before:
        PushMatrix
        Rotate:
            axis: 0,0,1
            angle: root.angle
            origin: 400,350
    canvas.after:
        PopMatrix
    BoxLayout:
        canvas:
            Color:
                rgba: 1,1,1,1
            Line:
                circle: 400, 350, root.taille_blanc
            Color:
                rgba: 1,0.5,0.5,1
            Ellipse:
                pos: 285, 335
                size: root.taille_dots, root.taille_dots
            Color:
                rgba: 0.5,0.5,1,1
            Ellipse:
                pos: 485, 335
                size: root.taille_dots, root.taille_dots



<MenuScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            BoxLayout:
            BoxLayout:
                Label:
                    text: "Duet"
            BoxLayout:
        BoxLayout:
            BoxLayout:
            BoxLayout:
                PlayerMenu
            BoxLayout:
        BoxLayout:
            Button:
                text: 'Play'
                on_press: root.manager.current = 'level'
            Button:
                text: 'Settings'
                on_press: root.manager.current = 'settings'
            Button:
                text: "Exit"
                on_press: app.stop()


<SettingsScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            BoxLayout:
            BoxLayout:
                Label:
                    text: "Settings"
            BoxLayout:
        BoxLayout:
            BoxLayout:
            BoxLayout:
            BoxLayout:
        BoxLayout:
            BoxLayout:
            BoxLayout:
                Button:
                    text: 'Button'
                Button:
                    text: 'Menu'
                    on_press: root.manager.current = 'menu'
            BoxLayout:

<LevelScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            BoxLayout:
                Button:
                    text: 'Back'
                    on_press: root.manager.current = 'menu'
            BoxLayout:
                Label:
                    text: "Level choice"
            BoxLayout:
        BoxLayout:
            BoxLayout:
            GridLayout:
                cols: 3
                rows: 3
                Button:
                    text: 'I'
                    on_press: root.play(1)
                Button:
                    text: 'II'
                    on_press: root.play(2)
                Button:
                    text: 'III'
                    on_press: root.play(3)
                Button:
                    text: 'IV'
                    on_press: root.play(4)
                Button:
                    text: 'V'
                    on_press: root.play(5)
                Button:
                    text: 'VI'
                    on_press: root.play(6)
                Button:
                    text: 'VII'
                    on_press: root.play(7)
                Button:
                    text: 'VIII'
                    on_press: root.play(8)
                Button:
                    text: 'IX'
                    on_press: root.play(9)
            BoxLayout:
        BoxLayout:

<GameScreen>:
    BoxLayout:
        Label:
            text: 'Game !'
